@model List_of_Objects.Models.CharacterModel;
@{
    ViewData["Title"] = "Actualiza el Personaje";
}

<h1 class="text-center">Actualiza el Personaje con .NET 8 Modelo Vista Controlador</h1>
<br>
<br>
<div class="row">
    <div class="col-md-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>Actualiza el Personaje</strong>
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Update">

                    <input type="hidden" asp-for="ID">

                    <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Nombre</label>
                        <input asp-for="Name" class="form-control" placeholder="Ingresa el Nombre">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Age" class="control-label">Edad</label>
                        <input asp-for="Age" class="form-control" placeholder="Ingresa la Edad">
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Job" class="control-label">Ocupación</label>
                        <input asp-for="Job" class="form-control" placeholder="Ingresa la Ocupación">
                        <span asp-validation-for="Job" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary d-block mx-auto"><i class="bi bi-pencil-fill"></i>Actualizo el Personaje</button>
                    </div>
                </form>
                <br><br>
                <a asp-asp-controller="Inicio" asp-action="Index">Vuelvo a Inicio</a>
            </div>
        </div>
    </div>
</div>